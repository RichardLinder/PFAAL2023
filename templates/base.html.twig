<!DOCTYPE html>
<html>
    <head>
        <meta charset="UTF-8">
        <title>{% block title %}Welcome!{% endblock %}</title>
        <script src="https://kit.fontawesome.com/c8e56db3ce.js" crossorigin="anonymous"></script>
        <link rel="stylesheet" href="{{asset('css/main.css')}}">
        <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootswatch@4.5.2/dist/lux/bootstrap.min.css" integrity="sha384-9+PGKSqjRdkeAU7Eu4nkJU8RFaH8ace8HGXnkiKMP9I9Te0GJ4/km3L1Z8tXigpG" crossorigin="anonymous">
        <link rel="icon" href="data:image/svg+xml,<svg xmlns=%22http://www.w3.org/2000/svg%22 viewBox=%220 0 128 128%22><text y=%221.2em%22 font-size=%2296%22>⚫️</text></svg>">

    </head>
    <body>
        <div id="contenaire">
            <header>
                <figure>
                    <a href="{{path('app_accueil')}}"><img   id="logo" src="{{ asset('images/logo.png') }}" alt="logo bmKeys"></a>
                </figure>
    
                <nav id="topNav">
                    
                    {% if not is_granted('ROLE_USER') %}
                    <a href="{{path('app_inscription')}}">Inscription</a>
                    
                    {% endif %}
                    
                    {% if not is_granted('ROLE_USER') %}
                    <a href="{{path('connexion')}}">Connexion</a>
                    
                    {% endif %}
                    {% if  is_granted('ROLE_USER') or is_granted('ROLE_ADMIN') %}
                    <a href="{{path('app_logout')}}">Deconnection</a>
                    
                    {% endif %}
                    {% if is_granted('ROLE_ADMIN') %}
                    <a href="{{path('admin')}}">Admin</a>
                    <a href="{{path('devisAdmin')}}">Devis Admin</a>
                    {% endif %}
                    
             
                    {% if is_granted('ROLE_USER') %}
                    <a href="{{path('vosClef')}}">Vos Clés</a>

                    <a href="{{path('profil')}}">Profil</a>
                    {% endif %}
                </nav>

                <div id="myBurgerMenu" class="burgerMenu">
                    <a id="closeBtn" href="#" class="close">×</a>
                    <ul>
                        {% if not is_granted('ROLE_USER') %}
                        <li><a class="link_menu" href="{{path('app_inscription')}}">Inscription</a>{% endif %}</li>
                        {% if not is_granted('ROLE_USER') %}
                        <li><a class="link_menu" href="{{path('connexion')}}">Connexion</a>{% endif %}</li>
                        {% if  is_granted('ROLE_USER') or is_granted('ROLE_ADMIN') %}
                        <li><a class="link_menu" href="{{path('app_logout')}}">Deconnection</a>{% endif %}</li>
                        {% if is_granted('ROLE_ADMIN') %}
                        <li>
                            <a class="link_menu" class="link_menu" href="{{path('admin')}}">Admin</a>
                            <a href="{{path('devisAdmin')}}">Devis Admin</a>
                            {% endif %}</li>
                            {% if is_granted('ROLE_USER') %}
                        <li><a class="link_menu" href="{{path('vosClef')}}">Vos Clés</a></li>
                        <li><a class="link_menu" href="{{path('profil')}}">Profil</a></li>
                        {% endif %}
                    </ul>
                </div>
        
                <a href="#" id="openBtn">
                    <span class="burger-icon">
                        <span></span>
                        <span></span>
                        <span></span>
                    </span>
                </a>





            </header> 
            
            <main>

                {% block body %}{% endblock %}
            </main>
            
            <footer>
            <span>contact</span>
            <span>mentions légales</span>
            <span>CGV</span>
        </footer>
        </div>
    <script src="{{asset('JS/menus.js')}}"></script>
    </body>
</html>
