{% extends 'base.html.twig' %}

{% block title %}Page d'accuille{% endblock %}

{% block body %}

<h1 class="accueil">Presentation de BmKeys</h1>

<p>Bmkeys est une entreprise artisanal qui produit des clef personalisé de haut qualité.</p>


        {% if networks  is defined%}
            

            <nav id="leftNav">
                {% for network in networks %}
                {% if network.isActive%}    
                <a id="{{network.title}}" href="{{network.link}}"><i class="{{network.awesome}}"></i></a> 
                {% endif %}  
                {% endfor %}
            
            </nav>

        
        {% endif %}    

            <section id="shop">
                <h2 class="accueil"> Presentation de différent clef déjas realisé</h2>
                    
                <article class="carousellShop">
                    {% if photos is defined and photos is not empty %}

                            {% for photo in photos %}
                            
                            <figure>
                                <img src="{{photo.liens}}" alt="{{photo.titre}} ">
                            </figure>

                            {% endfor %}                        
                    
                        {% else %}

                        <figure>
                            <img src="{{ asset('images/Pas-dimage-disponible.jpg') }}" alt="Pas de Photographie disponible">
                        </figure>
                        <figure>
                            <img src="{{ asset('images/Pas-dimage-disponible.jpg') }}" alt="Pas de Photographie disponible">
                        </figure>
                        <figure>
                            <img src="{{ asset('images/Pas-dimage-disponible.jpg') }}" alt="Pas de Photographie disponible">
                        </figure>

                    {% endif %}
                    
                </article>
                
                {% if is_granted('ROLE_USER') %}
                <div class="liens">
                    <a class="brun" href="{{ path('devis')}}">choisir sa clef</a>

                </div>
                    
                {% endif %}
                        
            </section>



            <section id="apropos">
                <div class=" carouselApropos">
                    <figure>
                        <img src="https://encrypted-tbn0.gstatic.com/images?q=tbn:ANd9GcQhNBGUqA0aytXXTN9RUZMBqAJlS7f7ED5Qbawd_dNRa9H_sI3WADO9r7zl17m7rQYPK6o&usqp=CAU" alt="img1">
                    </figure>
                    <figure>
                        <img src="https://cache.marieclaire.fr/data/photo/w1000_ci/1h4/portrait-artisan-metier-manuel.webp" alt="img2">
                    </figure>
                    <figure>
                        <img src="https://encrypted-tbn0.gstatic.com/images?q=tbn:ANd9GcQJ9Ycl4TfulFokUe4AGNAWT4YVYihVKoc_-5wZQn6RZWGLFYB_EQbWHhlugIWVFxpv8CE&usqp=CAU" alt="img3">
                    </figure>
                </div>


            </section>
            <section >

                <h2class="accueil"> Les différente information lié a bmKeys</h2>
                <div id="actualite">

                    {% if articles is defined and articles is not empty %}
                    
                    <div class="contenaire_articles">
                        <div class="articles">
                            
                            {% for article in articles  %}            
                            <article>
                                <h4>
                                    {{article.titleArticle}}
                                </h4>
                                <p>
                                    {{article.textArticle}}
                                </p>
                            </article>
                            {% endfor %}
                            
                        </div>
                        {% else %}
                        <figure class="articles">
                            <img src="{{ asset('images/Placeholder-600x600.png') }}" alt="placeholder article">
                        </figure> 
                        <figure class="articles">
                            <img src="{{ asset('images/Placeholder-600x600.png') }}" alt="placeholder article">
                        </figure>
                        <figure class="articles">
                            <img src="{{ asset('images/Placeholder-600x600.png') }}" alt="placeholder article">
                        </figure>
                        {% endif %}
                        {% if article is defined %}
                        <a class="liens" href=" {{ path('article')}} " >Voir plus d'article</a>
                        
                        {% endif %}
                    </div>
                </div>
                </section>
            

      
    </div>

{% endblock %}
